<%= form_for(@user_order, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @user_order.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@user_order.errors.count, "error") %> prohibited this user_order from being saved:</h4>

      <ul>
      <% @user_order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :order_number, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :order_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :table_booking_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :table_booking_id, TableBooking.all.collect {|p| [ p.qr_code, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :user_id, User.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :order_amount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :order_amount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :order_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :order_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
