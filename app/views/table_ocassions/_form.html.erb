<%= form_for(@table_ocassion, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @table_ocassion.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@table_ocassion.errors.count, "error") %> prohibited this table_ocassion from being saved:</h4>

      <ul>
      <% @table_ocassion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :table_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :table_id, RestaurantTable.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ocassion_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ocassion_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :booking_by, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :booking_by, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :creator_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :creator_id, User.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :modifier_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :modifier_id, User.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
