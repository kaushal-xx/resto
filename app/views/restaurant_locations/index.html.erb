<div class="page-header">
  <%= link_to new_restaurant_location_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Restaurant location
  <% end %>
  <h1>Listing restaurant_locations</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Restaurant branch</th>
            <th>Address line1</th>
            <th>Address line2</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Postal code</th>
            <th>Status</th>
            <th>Creator</th>
            <th>Modifier</th>
            <th>Create time</th>
            <th>Modified time</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @restaurant_locations) do |restaurant_location| %>
            <td><%= restaurant_location.restaurant_branch_id %></td>
            <td><%= restaurant_location.address_line1 %></td>
            <td><%= restaurant_location.address_line2 %></td>
            <td><%= restaurant_location.city %></td>
            <td><%= restaurant_location.state %></td>
            <td><%= restaurant_location.country %></td>
            <td><%= restaurant_location.postal_code %></td>
            <td><%= restaurant_location.status %></td>
            <td><%= restaurant_location.creator_id %></td>
            <td><%= restaurant_location.modifier_id %></td>
            <td><%= restaurant_location.create_time %></td>
            <td><%= restaurant_location.modified_time %></td>
            <td><%= link_to 'Show', restaurant_location %></td>
        <td><%= link_to 'Edit', edit_restaurant_location_path(restaurant_location) %></td>
        <td><%= link_to 'Destroy', restaurant_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
