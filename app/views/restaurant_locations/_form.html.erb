<%= form_for(@restaurant_location, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @restaurant_location.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@restaurant_location.errors.count, "error") %> prohibited this restaurant_location from being saved:</h4>

      <ul>
      <% @restaurant_location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :restaurant_branch_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :restaurant_branch_id, RestaurantBranch.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_line1, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :address_line1, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_line2, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :address_line2, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :country, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :postal_code, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :creator_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :creator_id, User.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :modifier_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :modifier_id, User.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
