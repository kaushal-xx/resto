<%= form_for(@restaurant_menu, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @restaurant_menu.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@restaurant_menu.errors.count, "error") %> prohibited this restaurant_menu from being saved:</h4>

      <ul>
      <% @restaurant_menu.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :restaurant_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :restaurant_id, Restaurant.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dish_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :dish_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dish_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :dish_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dish_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :dish_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
